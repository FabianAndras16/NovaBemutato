<%- include('header') %>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Főoldal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/choirs">Kórusok</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/members/<%=choir._id%>">Tagok</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">Rólunk</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active">Kórus adatainak módosítása</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/members/list/:choirID/edit/:memberID">Tagok adatainak módosítása</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col">
                </div>
                <div class="col-5">
                    <h1>Kórus adatainak módosítása</h1>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </div>
    <br>
    <div>
        <div class="container-fluid text-left">
            <div class="row">
                <div class="col">
                    <table class="table-striped table-bordered" style="width: 100%; background-color: #E2E0E0; border-style: solid; margin-left: auto; margin-right: auto;">
                        <tr>
                            <th>Adatok</th>
                            <th>&nbsp;</th>
                        </tr>
                        <tr>
                            <td><b>Név</b></td>
                            <td>
                                <%= choir.name %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Kórusvezető</b></td>
                            <td>
                                <%= choir.maestro %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Alapítás éve</b></td>
                            <td>
                                <%= choir.foundation %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Tagok száma</b></td>
                            <td>
                                <%= choir.numberOfMembers %>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-5">
                    <form action="/choirs/<%= choir._id %>/edit" method="post">
                        <div class="mb-3">
                            <label for="InputName" class="form-label">Név</label>
                            <input type="text" class="form-control" id="InputName" name="name" aria-describedby="emailHelp" value="<%= choir.name %>">
                        </div>
                        <div class="mb-3">
                            <label for="InputMaestro" class="form-label">Kórusvezető</label>
                            <input type="text" class="form-control" id="InputMaestro" name="maestro" value="<%= choir.maestro %>">
                        </div>
                        <div class="mb-3">
                            <label for="InputFoundation" class="form-label">Alapítás éve</label>
                            <input type="text" class="form-control" id="InputFoundation" aria-describedby="emailHelp" name="foundation" value="<%= choir.foundation %>">
                        </div>
                        <div class="mb-3">
                            <label for="InputNumOfMembers" class="form-label">Tagok száma</label>
                            <input type="text" class="form-control" id="InputNumOfMembers" aria-describedby="emailHelp" name="numberOfMembers" value="<%= choir.numberOfMembers %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Mentés</button>
                        <a href="/choirs" class="btn btn-warning">Vissza</a>
                    </form>
                </div>
                <div class="col">
                    <a href="/members/<%= choir._id %>/" class="btn btn-success">Kórustagok</a>
                    <br><br>
                    <a href="/members/<%= choir._id %>/new" class="btn btn-success">Új kórustag felvétele</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>