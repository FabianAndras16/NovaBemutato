    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Főoldal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/choirs">Kórusok</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/members/<%= choir._id %>">Tagok</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">Rólunk</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/choirs/<%= choir._id %>/edit">Kórus adatainak módosítása</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/members/<%= choir._id %>">Tagok adatainak módosítása</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col">
                </div>
                <div class="col-5">
                    <h1>Tag adatainak módosítása</h1>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </div>
    <br>
    <div>
        <div class="container-fluid text-left">
            <div class="row">
                <div class="col">
                    <table class="table-striped table-bordered" style="width: 100%; background-color: #E2E0E0; border-style: solid; margin-left: auto; margin-right: auto;">
                        <tr>
                            <th>Adatok</th>
                            <th>&nbsp;</th>
                        </tr>
                        <tr>
                            <td><b>Név</b></td>
                            <td>
                                <%= member.name %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Szólam</b></td>
                            <td>
                                <%= member.voice %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Mappaszám</b></td>
                            <td>
                                <%= member.folderNumber %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Email cím</b></td>
                            <td>
                                <%= member.email %>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Csatlakozás éve</b></td>
                            <td>
                                <%= member.joiningYear %>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-5">
                    <form action="/members/<%= choir._id %>/edit/<%= member._id%>" method="post">
                        <div class="mb-3">
                            <label for="InputMemberName" class="form-label">Név</label>
                            <input type="text" class="form-control" id="InputMemberName" name="name" value="<%= member.name  %>">
                        </div>
                        <div class="mb-3">
                            <label for="InputVoice" class="form-label">Szólam</label><br />
                            <select name="voice" id="inputVoice">
                                <option value="<%=member.voice%>" disabled selected="selected" hidden>
                                    <%= member.voice %>
                                </option>
                                <option value="SZOPRÁN">SZOPRÁN</option>
                                <option value="ALT">ALT</option>
                                <option value="TENOR">TENOR</option>
                                <option value="BASSZUS">BASSZUS</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="InputFolderNum" class="form-label">Mappaszám</label><br />
                            <select name="folderNumber" id="inputFolderNum">
                                <option value="<%=member.folderNumber%>" disabled selected hidden>
                                    <%=member.folderNumber%>
                                </option>
                                <% for (var j=0; j < membersCount; j++ ) { %>
                                    <option value="<%= (j+1) %>">
                                        <%= (j+1) %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="InputEmail" class="form-label">Email cím</label>
                            <input type="email" name="email" class="form-control" id="InputEmail" value="<%= member.email %>">
                        </div>
                        <div class="mb-3">
                            <label for="InputJoining" class="form-label">Csatlakozás éve</label>
                            <input type="number" class="form-control" id="InputJoining" name="joiningYear" value="<%= member.joiningYear %>">
                        </div>
                        <input type="submit" class="btn btn-primary" value="Mentés">
                        <a href="/members/<%= choir._id %>" class="btn btn-warning">Vissza</a>
                    </form>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>