<%- include('header') %>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
        <div class="container-fluid ">
            <a class="navbar-brand " href="/">Főoldal</a>
            <button class="navbar-toggler " type="button " data-bs-toggle="collapse " data-bs-target="#navbarCollapse "
                aria-controls="navbarCollapse " aria-expanded="false " aria-label="Toggle navigation ">
                <span class="navbar-toggler-icon "></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarCollapse ">
                <ul class="navbar-nav me-auto mb-2 mb-md-0 ">
                    <li class="nav-item ">
                        <a class="nav-link " aria-current="page " href="/choirs ">Kórusok</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link active ">Tagok</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link " href="/about ">Rólunk</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col">
                </div>
                <div class="col-6">
                    <h1>Tagok</h1>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="container-fluid text-left">
            <div class="row">
                <div class="col">
                </div>
                <div class="col-7">
                    <table class="table-striped table-bordered"
                        style="width: 100%; background-color: #E2E0E0; border-style: solid; margin-left: auto; margin-right: auto;">
                        <tr style="border: 1px; border-color: black; width: 100%;">
                            <th>Név</th>
                            <th>Szólam</th>
                            <th>Mappaszám</th>
                            <th>Email cím</th>
                            <th>Csatlakozás éve</th>
                            <th>Módosítás</th>
                        </tr>
                        <% members.forEach((member)=>{ %>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="<%= member.name %>" size="25"
                                        name="name" readonly>
                                </td>
                                <td style="text-align: center;">
                                    <input type="text" class="form-control" value="<%= member.voice %>" size="25"
                                        name="inputVoice" readonly>
                                </td>
                                <td style="text-align: center;">
                                    <input type="text" class="form-control" value="<%= member.folderNumber %>" size="25"
                                        name="folderNumber" readonly>
                                </td>
                                <td>
                                    <input type="email" name="email" class="form-control" id="InputEmail"
                                        value="<%= member.email %>" size="25" readonly>
                                </td>
                                <td style="text-align: center;">
                                    <input type="text" class="form-control" id="InputJoining"
                                        value="<%= member.joiningYear %>" name="joiningYear" size="25" readonly>
                                </td>
                                <td style="text-align: center;" class="d-flex flex-row justify-content-center align-items-center">
                                    <a href="/members/<%= member._choirMember %>/edit/<%= member._id %>"
                                        class="btn btn-sm btn-primary"><i
                                            class="bi bi-pencil-square"></i></a>

                                    <form action="/members/<%= member._choirMember %>/del/<%= member._id %>"
                                        method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        <input type="hidden" name="_token" value="{{ csrf_token() }}">
                                        <button class="btn btn-sm btn-danger" type="submit"><i
                                                class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                                </tr>
                            <% }) %>
                    </table>
                </div>
                <div class="col">
                    <a href="/members/<%= choir._id %>/new" class="btn btn-success">Új kórustag felvétele</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>